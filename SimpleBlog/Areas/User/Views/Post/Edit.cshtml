@model SimpleBlog.Models.Post

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Your Post</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" asp-area="User" asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id" class="row">
            <div class="border p-3">

                <!-- Validation summary (uncomment to use) -->
                <!-- <div asp-validation-summary="ModelOnly"></div> -->

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" value="@Model.Title"></input>
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Content" class="form-control border-0 shadow">@Model.Content</textarea>
                    <label asp-for="Content" class="ms-2"></label>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save Changes</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
